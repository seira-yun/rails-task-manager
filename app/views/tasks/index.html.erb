<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "ðŸ—‘", task_path(task), method: :delete, data: { confirm: "Really delete #{task.title}?" } %>
  </li>
  <% end %>
</ul>

<p><%= link_to "Add new task", new_task_path %></p>
